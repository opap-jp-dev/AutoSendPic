<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  <EditTextPreference
    android:key="Width"
    android:title="Width"
    android:summary="Width"
    android:inputType="number"
    android:defaultValue="1280"/>

  <EditTextPreference
    android:key="Height"
    android:title="Height"
    android:summary="Height"
    android:inputType="number"
    android:defaultValue="720"/>

  <EditTextPreference
    android:key="MinInterval"
    android:title="MinInterval"
    android:summary="MinInterval"
    android:inputType="number"
    android:defaultValue="10"/>

  <CheckBoxPreference
    android:key="UseHttp"
    android:title="UseHttp"
    android:summary="UseHttp"
    android:defaultValue="true" />
  
  <EditTextPreference
    android:key="HttpUrl"
    android:title="HttpUrl"
    android:summary="HttpUrl"
    android:inputType="textUri"
    android:defaultValue=""/>

  <EditTextPreference
    android:key="HttpUser"
    android:title="HttpUser"
    android:summary="HttpUser"
    android:inputType="textEmailAddress"
    android:defaultValue=""/>

  <EditTextPreference
    android:key="HttpPass"
    android:title="HttpPass"
    android:inputType="textVisiblePassword"
    android:defaultValue=""/>
  
  <CheckBoxPreference
    android:key="BeepOnError"
    android:title="BeepOnError"
    android:summary="BeepOnError"
    android:defaultValue="true" />
  
  <CheckBoxPreference
    android:key="UsePreview"
    android:title="UsePreview"
    android:summary="UsePreview"
    android:defaultValue="true" />
</PreferenceScreen>
